@model List<UserInfo>

<h1 class="h4 text-center">Toplantı katılım listesi</h1>
<table class="table table-bordered text-center">
    <thead>
    <tr>
        <td><b>Ad</b></td> 
        <td><b>Katılım durumu</b></td> 
        <td> </td> 
    </tr>
    </thead>
    <tbody>
    @{ int i = 0;}
    
    @foreach (var user in Model)
    {
        var durum = user.WillAttent == true ? "Evet" : "Hayır";
        var className = user.WillAttent == true ? "table-success" : "table-danger";
        if (user.WillAttent == true)
        {
            i++;
        }
        
        <tr class="@className">
            <td>@user.Name</td>
            <td>@durum</td>
            <td>
                <a class="btn btn-sm btn-primary" href="/meeting/details/@user.id">Detay</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<div class="card">
    <div class="card-body text-center">
        <span>Katılımcı Sayısı : @i</span>
    </div>
</div>