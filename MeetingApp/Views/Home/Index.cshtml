@model MeetingInfo 
@{
    Layout = "_Layout2";
}
<h1 class="h4 text-center">@ViewBag.selamlama</h1>
<p class="text-center">Toplantı katılım durumunuzu bildirin</p>
<div class="card my-2">
    <ul class="list-group list-group-flush">
        <li class="list-group-item">@Model.Location</li>
        <li class="list-group-item">@Model.Date.ToString("d")</li>
        <li class="list-group-item">@Model.NumberOfPeople Katılımcı Mevcut</li>
    </ul>
</div>
<a class="btn btn-sm btn-outline-primary" asp-controller="Meeting" asp-action="Apply" >Başvuru Yap</a>